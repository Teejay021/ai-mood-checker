<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.aimoodchecker.controller.ComposeController"
      alignment="CENTER"
      spacing="32"
      styleClass="glass-card"
      style="-fx-padding: 48;">

    <Label text="Log Your Mood" styleClass="title-label" alignment="CENTER"/>

    <VBox spacing="32" maxWidth="600" alignment="CENTER">
        <Label text="How are you feeling today?" 
               styleClass="modern-label" 
               alignment="CENTER"/>
        
        <HBox spacing="24" alignment="CENTER">
            <Button text="😊 Happy" 
                    onAction="#onHappy" 
                    styleClass="mood-button happy-button"/>
            <Button text="😐 Neutral" 
                    onAction="#onNeutral" 
                    styleClass="mood-button neutral-button"/>
            <Button text="😔 Sad" 
                    onAction="#onSad" 
                    styleClass="mood-button sad-button"/>
        </HBox>
        
        <Label fx:id="selectedMoodLabel" 
               text="No mood selected yet" 
               styleClass="mood-status-label"
               alignment="CENTER"/>
        
        <VBox spacing="16" alignment="CENTER">
            <Label text="Describe your mood:" 
                   styleClass="modern-label" 
                   alignment="CENTER"/>
            <TextArea fx:id="moodText" 
                      promptText="Tell me more about how you're feeling..." 
                      prefRowCount="5" 
                      wrapText="true" 
                      styleClass="modern-textarea"
                      prefWidth="500"/>
        </VBox>
        
        <HBox spacing="24" alignment="CENTER">
            <Button fx:id="saveBtn" 
                    text="💾 Save Mood" 
                    onAction="#onSave" 
                    styleClass="modern-button success-button"/>
            <Button fx:id="cancelBtn" 
                    text="❌ Cancel" 
                    onAction="#onCancel" 
                    styleClass="modern-button danger-button"/>
        </HBox>
    </VBox>
</VBox>
