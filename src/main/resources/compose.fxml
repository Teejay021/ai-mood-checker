<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.aimoodchecker.controller.ComposeController"
      spacing="24" 
      styleClass="glass-card"
      style="-fx-padding: 32;">
    
    <Label text="📝 Log Mood" 
           styleClass="title-label" 
           style="-fx-font-size: 24px;"
           alignment="CENTER"/>
    
    <!-- You'll add: Date, Mood(1-5), Note fields -->
    <HBox spacing="16" alignment="CENTER">
        <Button text="💾 Save" 
                onAction="#onSave"
                styleClass="modern-button success-button"/>
        <Button text="❌ Cancel" 
                onAction="#onCancel"
                styleClass="modern-button danger-button"/>
    </HBox>
</VBox>
