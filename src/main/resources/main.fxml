<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.aimoodchecker.controller.MainController"
      spacing="20" alignment="CENTER" styleClass="main-container">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    <Label text="AI Mood Checker" styleClass="title-label"/>
    
    <Label text="App Ready" styleClass="status-label"/>
    
    <HBox spacing="20" alignment="CENTER">
        <Button text="Check Mood" styleClass="primary-button"/>
        <Button text="View History" styleClass="secondary-button"/>
    </HBox>
    
</VBox>
