<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.aimoodchecker.controller.HomeController"
      alignment="CENTER"
      spacing="32"
      styleClass="glass-card"
      style="-fx-padding: 48;">

    <Label text="AI Mood Checker" styleClass="title-label" alignment="CENTER"/>

    <Label text="Track your emotions and get AI-powered insights" 
           styleClass="subtitle-label" 
           alignment="CENTER"/>

    <ImageView fx:id="logo" fitWidth="180" preserveRatio="true">
        <image>
            <Image url="@images/logo.png"/>
        </image> 
    </ImageView>

    <VBox spacing="24" alignment="CENTER">
        <Label text="What would you like to do today?" 
               styleClass="modern-label" 
               alignment="CENTER"/>
        
        <HBox alignment="CENTER" spacing="24">
            <Button fx:id="logMoodBtn" 
                    text="📝 Log Mood" 
                    onAction="#handleLogMood"
                    styleClass="modern-button primary-button"/>
            
            <Button fx:id="viewHistoryBtn" 
                    text="📊 View History" 
                    onAction="#handleViewHistory"
                    styleClass="modern-button secondary-button"/>
        </HBox>
    </VBox>

</VBox>
